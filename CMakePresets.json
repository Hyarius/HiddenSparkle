{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 16,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "default",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON",
				"VCPKG_TARGET_TRIPLET": "x64-windows",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
			}
		},
		{
			"name": "debug",
			"inherits": "default",
			"description": "Configure for Debug build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"inherits": "default",
			"description": "Configure for Release build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "test",
			"inherits": "default",
			"description": "Configure for Release build with Test Units",
			"cacheVariables": {
				"ENABLE_TESTS": "ON",
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "clang-tidy",
			"inherits": "default",
			"description": "Configure with clang-tidy analysis enabled",
			"cacheVariables": {
				"SPARKLE_ENABLE_CLANG_TIDY": "ON",
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "coverage-clang",
			"inherits": "default",
			"description": "Configure Debug build with clang and coverage instrumentation enabled",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"ENABLE_TESTS": "ON",
				"SPARKLE_ENABLE_COVERAGE": "ON",
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "playground",
			"inherits": "default",
			"description": "Configure with Playground enabled",
			"cacheVariables": {
				"ENABLE_PLAYGROUND": "ON"
			}
		},
		{
			"name": "playground-debug",
			"inherits": "playground",
			"description": "Configure for Debug build with Playground",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "playground-release",
			"inherits": "playground",
			"description": "Configure for Release build with Playground",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "playground-relwithdebinfo",
			"inherits": "playground",
			"description": "Playground RelWithDebInfo (Release+Symbols)",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"hidden": true,
			"configurePreset": "default"
		},
		{
			"name": "debug",
			"configurePreset": "debug"
		},
		{
			"name": "release",
			"configurePreset": "release"
		},
		{
			"name": "test",
			"configurePreset": "test"
		},
		{
			"name": "clang-tidy",
			"configurePreset": "clang-tidy"
		},
		{
			"name": "clang-tidy-fix",
			"configurePreset": "clang-tidy",
			"targets": ["clang-tidy-fix"]
		},
		{
			"name": "coverage-clang",
			"configurePreset": "coverage-clang",
			"targets": ["coverage"]
		},
		{
			"name": "playground",
			"configurePreset": "playground"
		},
		{
			"name": "playground-debug",
			"configurePreset": "playground-debug"
		},
		{
			"name": "playground-release",
			"configurePreset": "playground-release"
		},
		{
			"name": "playground-relwithdebinfo",
			"configurePreset": "playground-relwithdebinfo"
		}
	],
	"testPresets": [
		{
			"name": "default",
			"hidden": true,
			"configurePreset": "default"
		},
		{
			"name": "debug",
			"configurePreset": "debug"
		},
		{
			"name": "release",
			"configurePreset": "release"
		},
		{
			"name": "test",
			"configurePreset": "test"
		},
		{
			"name": "playground",
			"configurePreset": "playground"
		},
		{
			"name": "playground-debug",
			"configurePreset": "playground-debug"
		},
		{
			"name": "playground-release",
			"configurePreset": "playground-release"
		}
	]
}
